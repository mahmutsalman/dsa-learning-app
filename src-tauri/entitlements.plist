<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Required for audio recording -->
    <key>com.apple.security.device.audio-input</key>
    <true/>
    
    <!-- Required for file system access -->
    <key>com.apple.security.files.user-selected.read-write</key>
    <true/>
    
    <!-- Required for network access if needed -->
    <key>com.apple.security.network.client</key>
    <true/>
    
    <!-- Required for hardened runtime -->
    <key>com.apple.security.cs.allow-jit</key>
    <true/>
    
    <!-- Required for dynamic library loading -->
    <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
    <true/>
    
    <!-- Required for SQLite database operations -->
    <key>com.apple.security.files.downloads.read-write</key>
    <true/>
    
    <!-- Required for application support directory access -->
    <key>com.apple.security.files.user-selected.read-write</key>
    <true/>
    
    <!-- Required for creating directories in user's home folder -->
    <key>com.apple.security.files.home.read-write</key>
    <true/>
    
    <!-- Alternative: Allow all file access (less secure but will definitely work) -->
    <key>com.apple.security.app-sandbox</key>
    <false/>
</dict>
</plist>